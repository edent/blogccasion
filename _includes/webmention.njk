<article id="webmention-{{ webmention['wm-id'] }}">
  <div class="metadata post-date">
    {% if webmention.author %}
      {% if webmention.author.photo %}
      <img src="{{ webmention.author.photo }}" alt="{{ webmention.author.name }}" width="48" height="48" loading="lazy" class="author">
      {% else %}
      <img src="{{ '/static/avatar.svg' | url }}" alt="" width="48" height="48" class="author">
      {% endif %}
      <p>By <a {% if webmention.url %}href="{{ webmention.url }}" {% endif %} target="_blank" rel="noopener noreferrer"><strong>{{ webmention.author.name }}</strong></a>.
    {% else %}
      <p><span>
        By <strong>Anonymous</strong>.
      </span>
    {% endif %}
    {% if webmention.published %}
      Written on <time class="postlist-date" datetime="{{ webmention.published }}">
        {{ webmention.published | readableDateFromISO }}
      </time>.
      <a class="webmention-anchor" href="#webmention-{{ webmention['wm-id'] }}">⚓️</a>
    {% endif %}
    </p>
  </div>
  <div>
    {{ webmention.content.text }}
  </div>
</article>
