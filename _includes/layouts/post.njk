---
layout: layouts/base.njk
templateClass: tmpl-post
---

<article>
  <header>
    <a href="{{ page.url | url }}"><h1>{{ title }}</h1></a>
    <div class="metadata post-date">
      <img class="author" src="/images/thomas_steiner.jpg" alt="Thomas Steiner headshot">
      <p>
        By <a href="/about/">Thomas Steiner</a>.
        Written on
        <time datetime="{{ page.date.toISOString() }}">
          <a href="{{ page.url | url }}">{{ page.date.toDateString() }}</a>
        </time>.
        {% if tags %}
          {% for tag in tags %}
            {% if tag !== 'posts' %}
              <a href="/tags/{{ tag }}" class="tag-item"><b>{{ tag }}</b></a>
            {% endif %}
          {% endfor %}
        {% endif %}
      </p>
    </div>
  </header>
  <section>
    {{ content | safe }}
  </section>
  <p class="edit-on-github">
    You can <a href="https://github.com/tomayac/blogccasion/tree/master/{{ page.inputPath }}" rel="nofollow">edit this page on GitHub</a>.
  </p>
</article>

{% set webmentionUrl %}{{ page.url | url | absoluteUrl(site.url) }}{% endset %}
{% include 'webmentions.njk' %}
