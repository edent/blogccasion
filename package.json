{
  "name": "blogccasion",
  "version": "1.0.0",
  "description": "Thomas Steiner's blog named Blogccasion",
  "scripts": {
    "build": "npx eleventy",
    "watch": "npx eleventy --watch",
    "start": "npx eleventy --serve",
    "postinstall": "shx cp ./node_modules/dark-mode-toggle/dist/dark-mode-toggle.min.mjs ./js/",
    "debug": "DEBUG=* npx eleventy"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/tomayac/blogccasion.git"
  },
  "author": {
    "name": "Thomas Steiner",
    "email": "steiner.thomas@gmail.com",
    "url": "https://blog.tomayac.com/"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/tomayac/blogccasion/issues"
  },
  "homepage": "https://github.com/tomayac/blogccasion",
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
    "dark-mode-toggle": "^0.4.12",
    "eslint": "^6.7.1",
    "eslint-config-google": "^0.14.0",
    "html-minifier": "^4.0.0",
    "luxon": "^1.21.2",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.5",
    "npm-check-updates": "^3.2.2",
    "shx": "^0.3.2",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-type-no-unknown": [
        true,
        {
          "ignore": [
            "custom-elements"
          ]
        }
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": []
        }
      ]
    }
  }
}
